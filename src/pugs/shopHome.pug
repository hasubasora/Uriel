html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="../framework/bootstrap.min.css")
        script(src="../framework/vue/vue.js")
        script(src="../framework/vue/vue-router.js")
        script(src="../javascripts/shopHome.js")
        style.
         [v-cloak]{
            display:none
         }
        title 云企商通 | 商店首页 
    body
     #container.container-fluid
      .row
       .col-sm-12
        .col-sm-1 
         img(src="../images/psb.jpg", alt="",width="100",height="73")
        .col-sm-2
          h2 云企商通 
        .col-sm-9 
         ul.list-inline(v-cloak)
          li(v-for="item in apply")
           router-link(:to="item.url")
            h2 {{item.name}}
      .row     
       .col-sm-12
        router-view
    template#shopHomePage
     .col-sm-12 
      .col-sm-2
       ul
        li
         router-link(to="/")  
          h3 店铺管理
      .col-sm-10
        h3 所有店铺
        .col-sm-12 
         .col-sm-4.bs-example(v-for="shops in shopList") 
          .row
           .col-sm-2
            img.img-rounded(src="../images/jjb.png", alt="",width="40px",height="40px",style="dispaly:block")
           .col-sm-7 
            h5 {{shops.shopName}}
           .col-sm-3
            router-link.btn.btn-primary.btn-sm(:to="shops.toShopUrl") 进入店铺
          .row
           .col-sm-4.pager(v-for="terItem in shops.ter")
            .row {{terItem.tit}}
            .row {{terItem.pic}}
           

          
    template#goodsListPage 
     .box 占位置
    template#shopPage 
     .row 
      .col-sm-2.col-xs-12
       .row
        h3(v-for="shops in leftList") {{shops.title}}
         .list-group
          router-link.list-group-item(to="/",v-for="itemShops in shops.titleLists") {{itemShops.tit}}
      .col-sm-10.col-xs-12
       .row 
        span 当前店铺：广州市第一商贸集团天河店
         router-link(to="/") 切换店铺
       .row 
        .col-sm-12
         .col-sm-6 
          h3 商品列表
         .col-sm-6 
          h3
           a.btn.btn-info.pull-right 上传商品
       .row
        .col-sm-12 111111111   
          
    template#categoryList 
