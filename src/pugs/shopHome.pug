html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="../framework/bootstrap.min.css")
        script(src="../framework/vue/vue.js")
        script(src="../framework/vue/vue-router.js")
        script(src="../javascripts/shopHome.js")
        style.
         [v-cloak]{
            display:none
         }
        title 云企商通 | 商店首页
    body
    #container
     .row
      .col-sm-12
       .col-sm-1 
        img(src="../images/psb.jpg", alt="",width="100",height="73")
       .col-sm-2
         h2 云企商通 
       .col-sm-9 
        ul.list-inline(v-cloak)
         li(v-for="item in apply")
          router-link(:to="item.url")
           h2 {{item.name}}
     .row     
      .col-sm-12
       router-view
    template#shopHomePage
     .col-sm-12 
      .col-sm-2
       ul
        li
         router-link(to="/")  
          h3 店铺管理
      .col-sm-10
        h3 所有店铺
        .col-sm-12 
         .col-sm-4.bs-example(v-for="shops in shopList") 
          .row
           .col-sm-2
            img.img-rounded(src="../images/jjb.png", alt="",width="40px",height="40px",style="dispaly:block")
           .col-sm-7 
            h5 {{shops.shopName}}
           .col-sm-3
            router-link.btn.btn-primary.btn-sm(:to="shops.toShopUrl") 进入店铺
          .row
           .col-sm-4.pager(v-for="terItem in shops.ter")
            .row {{terItem.tit}}
            .row {{terItem.pic}}
           

          
    template#goodsListPage 
     .box 占位置
